{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "rules": {
        "no-loop-func": "warn",
        "no-undef": "warn",
        "no-unused-vars": "warn",
        "curly": "warn",
        "quotes": ["warn", "single"],
        "eqeqeq": "warn",
        "strict": ["error", "global"],
        "semi": ["warn"],
        "keyword-spacing": ["warn", {
            "before": true
        }]
    },
    "env": {
        "node": true,
        "browser": true,
        "es6": true
    }
}

